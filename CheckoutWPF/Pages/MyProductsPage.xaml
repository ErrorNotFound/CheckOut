<Page x:Class="CheckoutWPF.Pages.MyProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:data="clr-namespace:CheckoutWPF.DataSource"
      xmlns:converter="clr-namespace:CheckoutWPF.Pages.Converter"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CheckoutWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="718" 
      d:DesignWidth="1024"
      Title="MyProductsPage">
    
    <Page.DataContext>
        <local:MyProductsPageViewModel />
    </Page.DataContext>
    
    <Page.Resources>
        <converter:StringToUppercaseStringConverter x:Key="stringToUppercaseStringConverter" />
    </Page.Resources>

    <Grid>
        <TabControl Background="{DynamicResource BrushColor3}"
                    Style="{DynamicResource MaterialTabControlStyle}"
                    ItemContainerStyle="{DynamicResource MaterialTabControlItemStyle}">
            
            <TabControl.Items>
                <TabItem Header="{DynamicResource MyProductsPage_TabHeader1}">
                    <Grid  Background="{DynamicResource BrushColor3}">
                        <ItemsControl ItemsSource="{Binding Source={x:Static data:ProductRepository.Instance}, Path=Products}"
                                      Margin="10"
                                      Background="White">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Height="60"
                                                Orientation="Horizontal">

                                        <TextBlock Text="{Binding Name}" Margin="10 0 0 0"/>
                                        <TextBlock Text="{Binding Id}" Margin="10 0 0 0"/>
                                        <TextBlock Text="{Binding CategoryId}" Margin="10 0 0 0"/>
                                        <TextBlock Text="{Binding Price}" Margin="10 0 0 0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </TabItem>
                <TabItem Header="{DynamicResource MyProductsPage_TabHeader2}">
                    <Grid  Background="{DynamicResource BrushColor3}">

                    </Grid>
                </TabItem>
            </TabControl.Items>

        </TabControl>
        
    </Grid>
</Page>
